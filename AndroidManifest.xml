<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸ‘‡ Tambah di sini -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes">

        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Onboarding -->
        <activity android:name=".onboarding.WelcomeActivity" />
        <activity android:name=".onboarding.LocationActivity" />
        <activity android:name=".onboarding.LanguageActivity" />

        <!-- Activity Home -->
        <activity android:name=".home.HomeActivity" />

        <!-- Activity Notes -->
        <activity android:name=".notes.CreateNoteActivity" />

        <!-- Activity Events -->
        <activity android:name=".events.EventsActivity" />

        <!-- Activity Search -->
        <activity android:name=".search.SearchActivity" />

        <!-- Calendar -->
        <activity android:name=".calendar.CalendarActivity" />

        <!-- Main Activity -->
        <activity android:name=".MainActivity" />

    </application>

</manifest>
